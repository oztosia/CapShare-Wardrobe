<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/recyclerImageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="W,2:1.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.9"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/delete_image_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_delete_forever_24"
                    app:layout_constraintEnd_toEndOf="@id/recyclerImageView"
                    app:layout_constraintBottom_toBottomOf="@id/recyclerImageView" />

                <ImageView
                    android:id="@+id/empty_check_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_fiber_manual_record_24"
                    app:layout_constraintEnd_toEndOf="@id/recyclerImageView"
                    app:layout_constraintBottom_toBottomOf="@id/recyclerImageView" />

                <ImageView
                    android:id="@+id/check_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_filled_fiber_manual_record_24"
                    app:layout_constraintEnd_toEndOf="@id/recyclerImageView"
                    app:layout_constraintBottom_toBottomOf="@id/recyclerImageView" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>